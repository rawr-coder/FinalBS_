<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#10193c"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ScheduleActivity">


    <!-- New LinearLayout for Content -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:text="Eskom status"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35sp" />
    <!-- Horizontal Headings LinearLayout -->
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn2"
        android:orientation="horizontal">

        <!-- First Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="lenasia"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Second Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Benoni"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Third Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Houghton"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn2"
        android:orientation="horizontal">



        <!-- Third Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mon - 2023-8-28"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="Search Icon"
            android:src="@drawable/warning" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="!6:00 - 18:30"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@drawable/circle_red"
            android:gravity="center">

            <!-- Text Inside the Circle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn2"
        android:orientation="horizontal">



        <!-- Third Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tue - 2023-8-29"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="Search Icon"
            android:src="@drawable/warbgreen4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No Loadshedding"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn2"
        android:orientation="horizontal">



        <!-- Third Heading -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wed - 2023-8-30"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomRectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="#10193c"
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/Home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#10193c"
            android:gravity="center"
            android:onClick="HomePage"
            android:src="@drawable/ic_home_black_24dp"/>

        <ImageButton
            android:id="@+id/Hotspot"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#10193c"
            android:gravity="center"
            android:onClick="HotSpot"
            android:src="@drawable/baseline_search_24"/>

        <ImageButton
            android:id="@+id/addsighting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#10193c"
            android:gravity="center"
            android:onClick="Observations"
            android:src="@drawable/location"/>

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#10193c"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="settings"
            android:src="@drawable/calculator"/>



    </LinearLayout>

</LinearLayout>