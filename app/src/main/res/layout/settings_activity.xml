<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#10193c"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <!-- First Column (60%) -->
        <LinearLayout
            android:id="@+id/firstColumn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <!-- Wrap the TextViews in a vertical LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <!-- First Heading -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:text="Set which alerts  you want to recieve"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <CheckBox
                android:textStyle="normal"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Remember me"
                    android:background="@drawable/btn"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                ></CheckBox>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="About us"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:gravity="left"
                    android:text="Thank you for your Support, help  us by reviewing and sharing with friends"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn"
                    android:layout_gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Version 1.0"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn"
                    android:layout_gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="250dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Privacy Policy"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn"
                    android:layout_gravity="left"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttonSelectedDate"
                        android:layout_width="180dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="48dp"
                        android:layout_gravity="left"
                        android:background="@drawable/lsbtn"
                        android:onClick="saveNewEvent"
                        android:text="share with friends"
                        android:textAllCaps="false"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                          />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>